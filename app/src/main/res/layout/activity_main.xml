<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 배경 이미지 -->
    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_forest" />

    <!-- 💰 코인 표시 박스 -->
    <LinearLayout
        android:id="@+id/coinBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_mission_box"
        android:padding="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:elevation="6dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_coin"
            android:layout_marginEnd="4dp" />

        <TextView
            android:id="@+id/coin_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#2E7D32"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- 제목 -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BearRest"
        android:textColor="#2E7D32"
        android:textSize="52sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true" />

    <!-- ✅ EXP 박스 (곰돌이 머리 바로 위) -->
    <FrameLayout
        android:id="@+id/expBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:layout_marginBottom="10dp">

        <View
            android:id="@+id/expFillView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#FFEB3B"
            android:layout_gravity="start"
            android:alpha="0.6" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_mission_box"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:elevation="6dp">

            <TextView
                android:id="@+id/expLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EXP"
                android:textStyle="bold"
                android:textColor="#000"
                android:background="#FFEB3B"
                android:padding="4dp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/expText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/200"
                android:textColor="#2E7D32"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>

    <!-- 🎈 말풍선 -->
    <TextView
        android:id="@+id/speechBubbleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bear_image"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/speech_bubble_bg"
        android:text="🐻 안녕! 나를 클릭해봐!"
        android:textColor="#2E7D32"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="12dp"
        android:maxWidth="250dp"
        android:gravity="center"
        android:elevation="8dp"
        android:visibility="gone" />

    <!-- 🐻 곰 캐릭터 -->
    <ImageView
        android:id="@+id/bear_image"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_above="@id/bottomMenu"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:src="@drawable/bear_happy"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="곰 캐릭터 - 클릭해서 대화하기" />

    <!-- 하단 메뉴 -->
    <LinearLayout
        android:id="@+id/bottomMenu"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:background="#E6F4E6"
        android:orientation="horizontal"
        android:weightSum="4"
        android:gravity="center"
        android:padding="5dp">

        <!-- Home -->
        <LinearLayout
            android:id="@+id/btn_home"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_home" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="#2E7D32"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Missions -->
        <LinearLayout
            android:id="@+id/btn_missions"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_mission" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Missions"
                android:textColor="#2E7D32"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Community -->
        <LinearLayout
            android:id="@+id/btn_community"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_community" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Community"
                android:textColor="#2E7D32"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Shop -->
        <LinearLayout
            android:id="@+id/btn_shop"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_shop" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shop"
                android:textColor="#2E7D32"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
