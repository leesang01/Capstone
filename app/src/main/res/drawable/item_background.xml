<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 배경색 (밝은 흰색) -->
    <solid android:color="#FFFFFF" />

    <!-- 둥근 모서리 -->
    <corners android:radius="16dp" />

    <!-- 외곽선 -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- 내부 여백 (선택사항) -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp" />
</shape>
