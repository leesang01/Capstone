<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 파란테마: 배경 이미지 -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_forest" />

    <!-- 남아있는 상점 내용 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shop_panel_background"
            android:padding="24dp"
            android:elevation="6dp">

            <!-- 상점 제목 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상점"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/darkGreen"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- 아이템 목록 -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true">

                <!-- 규용우를 복무하며 -->
                <!-- 가방 모달 -->
                <LinearLayout
                    android:id="@+id/item_hat"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:background="@drawable/item_background"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_hat"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="귀여운 모자"
                        android:textColor="@color/darkGreen"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_coin"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnBuyHat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="구매"
                        android:textColor="@android:color/white"
                        android:backgroundTint="@color/green" />
                </LinearLayout>

                <!-- 곰 티셔츠 -->
                <LinearLayout
                    android:id="@+id/item_shirt"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:background="@drawable/item_background"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_shirt"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="곰 티셔츠"
                        android:textColor="@color/darkGreen"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_coin"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnBuyShirt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="구매"
                        android:textColor="@android:color/white"
                        android:backgroundTint="@color/green" />
                </LinearLayout>

                <!-- 깔통 -->
                <LinearLayout
                    android:id="@+id/item_honey"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:background="@drawable/item_background"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_honey"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="꿀통"
                        android:textColor="@color/darkGreen"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_coin"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnBuyHoney"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="구매"
                        android:textColor="@android:color/white"
                        android:backgroundTint="@color/green" />
                </LinearLayout>

                <!-- 레벨업 키 -->
                <LinearLayout
                    android:id="@+id/item_key"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:background="@drawable/item_background"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_key"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="레벨업 키"
                        android:textColor="@color/darkGreen"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_coin"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="150"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnBuyKey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="구매"
                        android:textColor="@android:color/white"
                        android:backgroundTint="@color/green" />
                </LinearLayout>
            </GridLayout>

            <!-- 보관함 이동 버튼 -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_go_to_inventory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="보관함으로 이동"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="32dp"
                android:padding="12dp"
                android:background="@drawable/rounded_button_green" />
        </LinearLayout>
    </ScrollView>

    <!-- 뒤로가기 버튼 -->
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="start|top"
        android:layout_margin="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_back"
        android:contentDescription="뒤로가기"
        android:scaleType="fitCenter"
        android:elevation="10dp"
        android:clickable="true"
        android:focusable="true" />

</FrameLayout>
