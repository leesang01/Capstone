<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ë°°ê²½ ì´ë¯¸ì§€ -->
    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_forest" />

    <!-- ðŸ’° ì½”ì¸ í‘œì‹œ ë°•ìŠ¤ -->
    <LinearLayout
        android:id="@+id/coinBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_mission_box"
        android:padding="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:elevation="6dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_coin"
            android:layout_marginEnd="4dp" />

        <TextView
            android:id="@+id/coinCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#2E7D32"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- ì œëª© -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BearRest"
        android:textColor="#2E7D32"
        android:textSize="52sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true" />

    <!-- âœ… EXP í‘œì‹œ ë°•ìŠ¤ -->
    <LinearLayout
        android:id="@+id/expBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bear"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_mission_box"
        android:padding="8dp"
        android:elevation="6dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/expLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EXP"
            android:textStyle="bold"
            android:textColor="#000"
            android:background="#FFEB3B"
            android:padding="4dp"
            android:layout_marginEnd="12dp"/>

        <!-- âœ… ì—¬ê¸°ë§Œ ìˆ˜ì •ë¨ -->
        <TextView
            android:id="@+id/expText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/200"
            android:textColor="#2E7D32"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- ê³° ìºë¦­í„° -->
    <ImageView
        android:id="@+id/bear"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_above="@id/bottomMenu"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:src="@drawable/bear" />

    <!-- í•˜ë‹¨ ë©”ë‰´ -->
    <LinearLayout
        android:id="@+id/bottomMenu"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:background="#E6F4E6"
        android:orientation="horizontal"
        android:weightSum="4"
        android:gravity="center"
        android:padding="5dp">

        <!-- Home -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:onClick="goToHome">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_home" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="#2E7D32"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Missions -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:onClick="goToMissions">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_mission" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Missions"
                android:textColor="#2E7D32"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Community -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:onClick="goToCommunity">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_community" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Community"
                android:textColor="#2E7D32"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Shop -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:onClick="goToShop">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_shop" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shop"
                android:textColor="#2E7D32"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
