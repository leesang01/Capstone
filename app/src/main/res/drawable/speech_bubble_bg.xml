<?xml version="1.0" encoding="utf-8"?>
<!-- 곰 캐릭터와 어울리는 자연스러운 말풍선 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 말풍선 내부 색상 - 자연스러운 크림색 -->
    <solid android:color="#FFFEF7"/>

    <!-- 둥근 모서리 -->
    <corners android:radius="20dp"/>

    <!-- 테두리 - 자연스러운 초록색 -->
    <stroke
        android:width="3dp"
        android:color="#4CAF50"/>

    <!-- 그림자 효과를 위한 패딩 -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"/>
</shape>